<html>
<head>
  <title>ReminderBot App</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

Welcome to your dashboard, <%= user.firstName %>!</br>
<a href="/logout">Logout</a><br>
<a href="/event" class="btn btn-primary">Create an Event!</a></br>

<% if (user.google.id) { %>
  Google account linked with <%= user.google.email %> 
<% } else { %>
  <a href="/auth/google">Add Google Access!</a>
<% } %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Creator</th>
      <th>Event Title</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>
  <tbody>
  <% for (var i = 0; i < events.length; i++) { %>
    <tr>
      <td><%=events[i].creator%></td>
      <td><%=events[i].title%></td>
      <td><%=events[i].timeStart%></td>
      <td><%=events[i].timeEnd%></td>
  <% } %>
  </tbody>
</table>

</body>
</html>

